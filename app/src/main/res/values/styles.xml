<?xml version="1.0" encoding="utf-8"?>




<resources>
<!-- Define a custom button style -->
<style name="RoundCustomButtonStyle" parent="Widget.AppCompat.Button">
    <!-- Solid background color -->
    <item name="android:backgroundTint">#00796B</item> <!-- Button background color -->

    <!-- Corner radius for rounded corners -->
    <item name="cornerRadius">16dp</item> <!-- Adjust radius to change the roundness -->

    <!-- Border properties (stroke) -->
    <item name="strokeColor">#004D40</item> <!-- Border color -->
    <item name="strokeWidth">2dp</item> <!-- Border width -->

    <!-- Optional text and appearance settings -->
    <item name="android:textColor">#FFFFFF</item> <!-- Text color -->
    <item name="android:padding">12dp</item> <!-- Padding for the button -->
    <item name="android:textStyle">bold</item> <!-- Text style, optional -->
</style>



